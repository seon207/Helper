<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Community">
<FrameLayout
    android:id="@+id/frame"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/write"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="700dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="20dp" />
</FrameLayout>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8BC34A"
        android:text="정보"
        android:textColor="@color/black"
        android:textSize="8pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_community"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8BC34A"
        android:text="커뮤니티"
        android:textColor="@color/black"
        android:textSize="8pt"
        app:layout_constraintStart_toEndOf="@id/btn_info"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_page"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#8BC34A"
        android:text="마이페이지"
        android:textColor="@color/black"
        android:textSize="8pt"
        app:layout_constraintStart_toEndOf="@id/btn_community"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/write"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#CCCCCC"
        android:text="글쓰기"
        android:textColor="@color/black"
        android:textSize="5pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="@id/btn_page"
        app:layout_constraintTop_toBottomOf="@id/btn_page" />

    <Button
        android:id="@+id/btn_environ"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#B2E675"
        android:text="환경 소식"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_separate"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="분리수거"
        android:textSize="10pt"
        android:textColor="@color/black"
        android:backgroundTint="#B2E675"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_environ"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>