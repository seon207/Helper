<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserMypage">

    <Button
        android:id="@+id/pageuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#99CAEDA2"
        android:gravity="left"
        android:text="마이페이지"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10pt"/>


    <Button
        android:id="@+id/favorite"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginTop="296dp"
        android:backgroundTint="#CCCCCC"
        android:text="저장한 정보"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/pageuser"
        app:layout_constraintStart_toStartOf="@id/pageuser"
        app:layout_constraintTop_toBottomOf="@id/pageuser" />

    <Button
        android:id="@+id/logout"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#CCCCCC"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/favorite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/favorite"
        app:layout_constraintTop_toBottomOf="@id/favorite" />
</androidx.constraintlayout.widget.ConstraintLayout>